{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyInterface": "off"
      },
      "style": {
        "useEnumInitializers": "off"
      }
    },
    "ignore": ["node_modules", "*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["node_modules", "*.json"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  }
}
